<div class="page">
  <%= page_heading :h2, 'Change your password' %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="actions from-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Change my password", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="clearfix"></div>
</div>