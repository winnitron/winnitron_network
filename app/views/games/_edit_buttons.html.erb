<!-- EDIT BUTTONS -->

<% if user_signed_in? %>

  <!-- Add to Winnitron dropdown -->
  <div class="edit-buttons dropdown">
    <% if !current_user.playlists.empty? %>
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Add to Playlist
        <span class="caret"></span>
      </button>

      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% current_user.playlists.each do |playlist| %>
          <li>
            <a href="/listings?game_id=<%= game.id%>&playlist_id=<%= playlist.id %>" data-method="post">
              <%= playlist.games.include?(game) ? "âœ“" : "" %>
              <%= playlist.title %>
            </a>
          </li>
        <% end %>
      </ul>
    <% end %>

    <!-- Editing Buttons if Owned -->
    <% if current_user.owns?(game) || current_user.admin? %>
      <a href="<%= edit_game_path(game) %>">
        <button class="btn btn-success">
          Edit
        </button>
      </a>
      <a href="<%= confirm_destroy_game_path(game) %>">
        <button class="btn btn-danger" type="button">
          Delete
        </button>
      </a>
    <% end %>
  </div>

<% end %>
